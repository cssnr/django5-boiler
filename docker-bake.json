{
  "group": {
    "default": {
      "targets": ["app", "nginx"]
    }
  },
  "target": {
    "app": {
      "context": "app",
      "dockerfile": "Dockerfile",
      "tags": ["ghcr.io/smashedr/django5-boiler-app:latest"],
      "platforms": ["linux/amd64", "linux/arm64"],
      "output": ["type=image,push=true"]
    },
    "nginx": {
      "context": "nginx",
      "dockerfile": "Dockerfile",
      "tags": ["ghcr.io/smashedr/django5-boiler-nginx:latest"],
      "platforms": ["linux/amd64", "linux/arm64"],
      "output": ["type=image,push=true"]
    }
  }
}
